<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - LMS</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")

</head>
<body>
    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                <a href="http://www.lexicon.se/">
                    <img src="~/Images/logo-lexicon.gif" class="header-image" />
                </a>            
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">
                    
                    @if (User.IsInRole("Teacher"))
                    {
                        //TODO Link to Teacher management
                        <li>@Html.ActionLink("Kursöversikt","Index","Courses")</li>
                        <li><a href="@Url.Action("Register", "Account", new {course_id="0"})">Registrera en ny lärare</a></li>
                        <li><a href="@Url.Action("ExitAccount", "Account")">Avsluta användarkonto</a></li>
                        <li><a href="@Url.Action("Teachers", "Account",null,null)">Lärarlista</a></li>
                    }
                    @if (User.IsInRole("Student"))
                    {
                        <li>@Html.ActionLink("Min Kurs", "Details","Courses")</li>
                        //TODO Link to work
                    }
                </ul>
                @Html.Partial("_LoginPartial")
            </div>
        </div>
    </div>
    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year - LMS</p>
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
