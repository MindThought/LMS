@model IEnumerable<LMS.Models.ApplicationUser>



<h3>Elever:</h3>
@if (User.IsInRole("Teacher"))
{
    <a class="btn btn-default col-md-offset-10 col-md-2" href="@Url.Action("Register", "Account", new { courseID = ViewBag.CourseId })">Registrera en ny student</a>
}
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Email)
        </th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Email)
        </td>

        <td>
            @if (User.IsInRole("Teacher"))
            {
                @Html.ActionLink("Radera", "Delete", "Account", new { id = item.Id }, null)
            }
        </td>
    </tr>
}

</table>
