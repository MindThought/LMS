@model LMS.Models.ExitAccountViewModel
@{
    ViewBag.Title = "Exit Account";
}
<link rel="stylesheet" href="../Content/Login.css" />

<font size="33" color="red">Avsluta konto</font>

@using (Html.BeginForm("ExitAccount", "Account", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
{
    @Html.AntiForgeryToken()
    <hr />
    @Html.ValidationSummary("", new { @class = "text-danger" })
    <div class="form-group">
        @Html.LabelFor(m => m.Email, new { @class = "col-md-2 control-label" })
        <div class="col-md-10">
            @if (ViewBag.userEmail == null)
            {
                @Html.TextBoxFor(m => m.Email, new { @class = "form-control", placeholder = "E-postadress för konto att avsluta." })
            }
            @if (ViewBag.userEmail != null)
            {
                @Html.TextBoxFor(m => m.Email, new { @class = "form-control", @Value = ViewBag.userEmail, @type = "default" })
            }
        </div>
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.Password, new { @class = "col-md-2 control-label" })
        <div class="col-md-10">
            @Html.PasswordFor(m => m.Password, new { @class = "form-control", placeholder = "Lärarens lösenord" })
            @Html.ValidationMessageFor(m => m.Password, "", new { @class = "text-danger" })
        </div>
    </div>
    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" class="btn btn-warning" value="Verkställ" onclick="return confirm('Är du säker?')" />
        </div>
    </div>

}

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
